<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="post_venta_action" model="ir.actions.act_window">
        <field name="name">post_venta</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">post_venta</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="post_venta_view_form" model="ir.ui.view">
        <field name="name">post_venta</field>
        <field name="model">post_venta</field>
        <field name="arch" type="xml">
            <form string="post_venta">
                <form>
                    <group>
                        <field name="vendedor" />
                        <field name="puntuacionDada" />
                        <field name="mensaje" />
                        <field name="venta"/>
                    </group>
                </form>
            </form>
        </field>
    </record>

    <record id="post_venta_view_tree" model="ir.ui.view">
        <field name="name">post_venta</field>
        <field name="model">post_venta</field>
        <field name="arch" type="xml">
            <tree string="post_venta">
                <field name="vendedor" />
                <field name="puntuacionDada" />
                <field name="mensaje" />
                <field name="venta"/>
            </tree>
        </field>
    </record>
</odoo>